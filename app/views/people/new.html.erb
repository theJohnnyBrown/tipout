
<% form_for(@person) do |f| %>
  <%= f.error_messages %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :role %>
    <%= f.radio_button(:role, "1") %>
    <%= f.label :role %>
    <%= f.radio_button(:role, "2") %>
  </div>
  
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

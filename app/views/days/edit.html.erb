<% form_for(@day) do |f| %>
<%= f.error_messages %>
  <% f.fields_for :shifts do |shift_form| %>
    <%= shift_form.label :time_in %>
    <%= shift_form.text_field :time_in, :size => 6 %>
    <%= shift_form.label :time_out %>
    <%= shift_form.text_field :time_out, :size => 6 %>
    <%if (shift_form.object.person.role == 2) %>
      <%= shift_form.check_box :closing_barback %>
      <%= shift_form.label :closing_barback %> 
    <% end %>
    <br/>
  <% end %>
<%= f.submit 'continue' %>
<% end %>

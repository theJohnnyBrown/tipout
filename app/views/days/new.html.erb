
<% form_for @day do |f| %>
  <%= f.error_messages %>

    <span class="graytitle"><%= f.label :when %></span>
    <ul class="pageitem">    
      <li class="bigfield"><%= f.text_field :when %></li>
    </ul>  
   <span class="graytitle">Total Tips:</span>
  <ul class="pageitem">
    <li class="bigfield"><%= f.text_field :total_tips%></li>
  </ul>

  <span class="graytitle">Barback tipout %</span>
  <ul class="pageitem">
    <li class="bigfield"><%= f.text_field :tipout_pct %></li>
  </ul>
  
  <h3>Bartenders</h3>
  <div id="bartenders">
    <% f.fields_for :shifts do |shift_form| %>
      <%= render :partial => 'bartenders', :locals => { :f => shift_form } %>
    <% end %>

    <%= add_child_iWebKit_button "Add bartender", f, :shifts, {:partial => "bartenders"} %></p>
  </div>
  
  <h3>Barbacks</h3>
  <div id="barbacks">
    <% f.fields_for :shifts do |shift_form| %>
      <%= render :partial => 'barbacks', :locals => { :f => shift_form } %>
    <% end %>

    <%= add_child_iWebKit_button "Add barback", f, :shifts, {:partial => "barbacks"} %></p>
  </div>
  
  <ul class="pageitem">
    <li class="button">
      <%= f.submit 'continue' %>
    </li>
  </ul>
<% end %>
